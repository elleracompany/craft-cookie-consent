{% import "_includes/forms" as forms %}

<input type="hidden" name="action" value="cookie-consent/settings/save-cookie-group">
<input type="hidden" name="site_id" value="{{ selectedSite.id }}">
<input type="hidden" name="id" value="{{ group.id }}">
{% set disabled = group.isNewRecord ? not canCreate : not canEdit %}
{{ csrfInput() }}

{{ forms.lightswitchField({
    label: group.getAttributeLabel('required'),
    instructions: 'If required, the visitor can not turn off this cookie group.'|t('cookie-consent'),
    name: "required",
    disabled: disabled,
    on: group.required,
}) }}

{{ forms.lightswitchField({
    label: group.getAttributeLabel('store_ip'),
    instructions: 'If this cookie group is accepted, we store the visitors IP-address in the consent log.'|t('cookie-consent'),
    name: "store_ip",
    disabled: disabled,
    on: group.store_ip,
}) }}

{{ forms.lightswitchField({
    label: group.getAttributeLabel('default'),
    instructions: 'Should this cookie group be toggled on by default (for the user in consent window).'|t('cookie-consent'),
    name: "default",
    disabled: disabled,
    on: group.default,
}) }}
{% if not group.isNewRecord %}
{{ forms.textField({
    id: "slug",
    disabled: true,
    instructions: 'Use this slug to refrence this consent in your code. For autogenerated slugs the first part is the site slug.'|t('cookie-consent'),
    label: group.getAttributeLabel('slug'),
    name: "slug",
    disabled: false,
    value: group.slug,
    errors: group.getErrors("slug"),
    warning: "By changing this value you will invalidate the consent given to this group."
}) }}
{% endif %}

{{ forms.textField({
    id: "name",
    label: group.getAttributeLabel('name'),
    name: "name",
    disabled: disabled,
    value: group.name,
    errors: group.getErrors("name"),
}) }}

{{ forms.textAreaField({
    id: "description",
    label: group.getAttributeLabel('description'),
    name: "description",
    disabled: disabled,
    rows: 4,
    value: group.description,
    errors: group.getErrors("description"),
}) }}

{{ forms.textField({
    id: "order",
    label: group.getAttributeLabel('order'),
    instructions: 'Use a number between 0 and 100 to set the order of the cookie groups. Groups are ordered ascending.'|t('cookie-consent'),
    name: "order",
    disabled: disabled,
    value: group.order,
    errors: group.getErrors("order"),
}) }}

{% if not disabled %}
{{ forms.editableTable({
    id: 'cookies',
    name: 'cookies',
    label: group.getAttributeLabel('cookies'),
    required: false,
    allowAdd: true,
    allowReorder: true,
    allowDelete: true,
    cols: {
        name: {
            heading: "Cookie-name"|t('cookie-consent'),
            type: "singleline"
        },
        provider: {
            heading: "Provider"|t('cookie-consent'),
            type: "singleline"
        },
        description: {
            heading: "Description"|t('cookie-consent'),
            type: "multiline"
        },
        expiry: {
            heading: "Expiry"|t('cookie-consent'),
            type: "singleline"
        }
    },
    errors: group.getErrors("cookies"),
    rows: group.cookies | json_decode
}) }}

{% elseif group.cookies %}
    <div class="elements">
        <div class="tableview">
            <table class="data fullwidth">
                <thead style="font-weight: bold;">
                <tr>
                    <td>{{ "Cookie-name"|t('cookie-consent') }}</td>
                    <td>{{ "Provider"|t('cookie-consent') }}</td>
                    <td>{{ "Description"|t('cookie-consent') }}</td>
                    <td>{{ "Expiry"|t('cookie-consent') }}</td>
                </tr>
                </thead>
                <tbody>
                {% for cookie in group.cookies %}
                    <tr>
                        <td>{{ cookie.name }}</td>
                        <td>{{ cookie.provider }}</td>
                        <td>{{ cookie.description }}</td>
                        <td>{{ cookie.expiry }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}
